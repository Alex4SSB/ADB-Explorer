<UserControl
    x:Class="ADB_Explorer.Controls.PushIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    x:Name="Icon"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource DisabledGlyphStyle}" TargetType="ui:FontIcon" />
    </UserControl.Resources>
    <ui:SimpleStackPanel
        Margin="-5,0"
        d:Spacing="-5"
        DataContext="{Binding ElementName=Icon}"
        Orientation="Horizontal"
        Spacing="{Binding Spacing}">
        <ui:FontIcon FontSize="18" Glyph="&#xE8EA;" />
        <ui:FontIcon FontSize="14" Glyph="&#xE973;" />
    </ui:SimpleStackPanel>
</UserControl>
