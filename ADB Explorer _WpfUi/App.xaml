<Application
    x:Class="ADB_Explorer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
                <ResourceDictionary Source="Styles\BasicStyles.xaml" />
                <ResourceDictionary Source="Styles\CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="SymbolThemeFontFamily">Segoe Fluent Icons, Segoe MDL2 Assets</FontFamily>
            <FontFamily x:Key="Nunito">pack://application:,,,/Resources/Fonts/#Nunito</FontFamily>

        </ResourceDictionary>
    </Application.Resources>
</Application>
