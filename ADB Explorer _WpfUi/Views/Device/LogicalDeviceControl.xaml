<UserControl
    x:Class="ADB_Explorer.Views.LogicalDeviceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:ADB_Explorer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ADB_Explorer.Models"
    xmlns:strings="clr-namespace:ADB_Explorer.Strings"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:ADB_Explorer.ViewModels"
    xmlns:views="clr-namespace:ADB_Explorer.Views"
    d:DataContext="{d:DesignInstance Type=viewmodels:LogicalDeviceViewModel}"
    mc:Ignorable="d">
    <ui:CardControl Style="{StaticResource DeviceExpanderStyle}">
        <ui:CardControl.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.Resources>
                        <Style BasedOn="{StaticResource DeviceStatusFontSizeStyle}" TargetType="ui:FontIcon" />
                    </Grid.Resources>
                    <ui:FontIcon Glyph="{Binding TypeIcon}" />
                    <Grid Style="{StaticResource DeviceStatusGridStyle}">
                        <ui:FontIcon Style="{StaticResource DeviceStatusIconStyle}" />
                        <ui:FontIcon Foreground="{Binding RelativeSource={RelativeSource AncestorType=Border, Mode=FindAncestor, AncestorLevel=2}, Path=Background}" Glyph="{Binding StatusIcon}" />
                    </Grid>
                </Grid>
                <TextBlock Grid.Column="1" Margin="4">
                    <TextBlock.Style>
                        <Style BasedOn="{StaticResource DeviceNameTextBlockStyle}" TargetType="TextBlock">
                            <Setter Property="Text" Value="{Binding Name}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsOpen}" Value="True">
                                    <Setter Property="FontWeight" Value="Bold" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Unauthorized">
                                    <Setter Property="Text" Value="{Binding Source={x:Static Member=strings:Resources.S_DEVICE_UNAUTH_NONAME}}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Emulator">
                                    <Setter Property="Text" Value="{Binding ID}" />
                                </DataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Type}" Value="Service" />
                                        <Condition Binding="{Binding Name}" Value="" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Text" Value="{Binding Source={x:Static Member=strings:Resources.S_SERVICE_NONAME}}" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                <controls:SimpleStackPanel
                    Grid.Column="2"
                    Margin="2,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="6">
                    <ui:FontIcon Glyph="&#xE7EF;" Style="{StaticResource RootIconStyle}" />
                    <ui:FontIcon Glyph="&#xE838;">
                        <ui:FontIcon.Style>
                            <Style BasedOn="{StaticResource DeviceHeaderIcon}" TargetType="ui:FontIcon">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsOpen}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                                <Setter Property="ToolTip" Value="{Binding Source={x:Static Member=strings:Resources.S_TOOLTIP_BROWSING}}" />
                            </Style>
                        </ui:FontIcon.Style>
                    </ui:FontIcon>
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsOpen}" Value="False" />
                                            <Condition Binding="{Binding Status}" Value="Ok" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible" />
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <views:CompactBatteryControl DataContext="{Binding Battery}" />
                    </Grid>
                </controls:SimpleStackPanel>
            </Grid>
        </ui:CardControl.Header>
        <Grid Style="{StaticResource DeviceContentGridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border
                Padding="0,2"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="4">
                <controls:AdbMenu>
                    <controls:AdbMenu.Resources>
                        <Style BasedOn="{StaticResource DisabledGlyphStyle}" TargetType="ui:FontIcon">
                            <Setter Property="FontSize" Value="18" />
                            <Setter Property="Margin" Value="-5,2" />
                        </Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="Foreground" Value="{DynamicResource SystemControlBackgroundBaseHighBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </controls:AdbMenu.Resources>
                    <controls:AdbMenu.Style>
                        <Style BasedOn="{StaticResource AdbMenuStyle}" TargetType="controls:AdbMenu">
                            <Setter Property="IsEnabled" Value="False" />
                            <Setter Property="Height" Value="30" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Ok">
                                    <Setter Property="IsEnabled" Value="True" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Source={x:Static Member=models:Data.RuntimeSettings}, Path=UseFluentStyles}" Value="True">
                                    <Setter Property="Height" Value="32" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </controls:AdbMenu.Style>
                    <ui:MenuItem Height="38" ToolTip="{Binding Source={x:Static strings:Resources.S_ROOT_FORBID_TITLE}}">
                        <ui:MenuItem.Style>
                            <Style BasedOn="{StaticResource DeviceActionsMenuItemStyle}" TargetType="ui:MenuItem">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Type}" Value="Sideload">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ui:MenuItem.Style>
                        <ui:MenuItem.Header>
                            <ui:FontIcon
                                Margin="-4,-8"
                                FontSize="18"
                                Glyph="&#xE7EF;"
                                Style="{StaticResource GlyphFont}" />
                        </ui:MenuItem.Header>
                        <ui:MenuItem IsEnabled="False">
                            <ui:MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontWeight="Bold">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource StringFormatConverter}" ConverterParameter="{x:Static strings:Resources.S_ROOT_STATUS_TITLE}">
                                                <Binding Path="RootString" />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <TextBlock FontWeight="Bold" Style="{StaticResource RecoveryRootStatusStyle}">
                                        <Run Text=" - " />
                                        <Run Text="{Binding Mode=OneWay, Source={x:Static Member=strings:Resources.S_RECOVERY_MODE}}" />
                                    </TextBlock>
                                </StackPanel>
                            </ui:MenuItem.Header>
                        </ui:MenuItem>
                        <Separator>
                            <Separator.Style>
                                <Style BasedOn="{StaticResource {x:Static MenuItem.SeparatorStyleKey}}" TargetType="Separator">
                                    <Setter Property="Margin" Value="-11,0" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Root}" Value="Forbidden">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Type}" Value="Recovery">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Separator.Style>
                        </Separator>
                        <ui:MenuItem Command="{Binding ToggleRootCommand.Command}">
                            <ui:MenuItem.Style>
                                <Style BasedOn="{StaticResource WpfUiMenuItem}" TargetType="ui:MenuItem">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Root}" Value="Forbidden">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Type}" Value="Recovery">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ui:MenuItem.Style>
                            <ui:MenuItem.Header>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style BasedOn="{StaticResource DisabledTextBlockStyle}" TargetType="TextBlock">
                                            <Setter Property="Text" Value="{Binding Mode=OneWay, Source={x:Static Member=strings:Resources.S_BUTTON_ENABLE}}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Root}" Value="Enabled">
                                                    <Setter Property="Text" Value="{Binding Mode=OneWay, Source={x:Static Member=strings:Resources.S_BUTTON_DISABLE}}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </ui:MenuItem.Header>
                        </ui:MenuItem>
                    </ui:MenuItem>
                    <ui:MenuItem
                        Height="38"
                        ItemsSource="{Binding RebootCommands}"
                        Style="{StaticResource DeviceActionsMenuItemStyle}"
                        ToolTip="{Binding Mode=OneWay, Source={x:Static Member=strings:Resources.S_DEVICE_REBOOT_TITLE}}">
                        <ui:MenuItem.ItemContainerStyle>
                            <Style TargetType="MenuItem">
                                <Setter Property="Command" Value="{Binding Command}" />
                            </Style>
                        </ui:MenuItem.ItemContainerStyle>
                        <ui:MenuItem.Header>
                            <ui:FontIcon
                                Margin="-4,-8"
                                FontSize="18"
                                Glyph="&#xE777;"
                                Style="{StaticResource GlyphFont}" />
                        </ui:MenuItem.Header>
                    </ui:MenuItem>
                    <ui:MenuItem Command="{Binding RemoveCommand.Command}" ToolTip="{Binding RemoveCommand.Description}">
                        <ui:MenuItem.Style>
                            <Style BasedOn="{StaticResource DeviceActionsMenuItemStyle}" TargetType="ui:MenuItem">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RemoveCommand.IsEnabled}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ui:MenuItem.Style>
                        <ui:MenuItem.Header>
                            <ui:FontIcon Glyph="&#xE711;" />
                        </ui:MenuItem.Header>
                    </ui:MenuItem>
                    <ui:MenuItem Command="{Binding SideloadCommand.Command}" ToolTip="{Binding Mode=OneWay, Source={x:Static Member=strings:Resources.S_REBOOT_SIDELOAD}}">
                        <ui:MenuItem.Style>
                            <Style BasedOn="{StaticResource DeviceActionsMenuItemStyle}" TargetType="ui:MenuItem">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SideloadCommand.IsEnabled}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ui:MenuItem.Style>
                        <ui:MenuItem.Header>
                            <ui:FontIcon Glyph="&#xE67A;" />
                        </ui:MenuItem.Header>
                    </ui:MenuItem>
                </controls:AdbMenu>
            </Border>
            <ui:Button
                Grid.Column="1"
                HorizontalAlignment="Right"
                Appearance="Primary"
                Command="{Binding BrowseCommand.Command}"
                Content="{Binding Source={x:Static Member=strings:Resources.S_BUTTON_BROWSE}}"
                Style="{StaticResource DeviceTextButtonStyle}" />
        </Grid>
    </ui:CardControl>
</UserControl>
