<UserControl
    x:Class="ADB_Explorer.Controls.AdbContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ADB_Explorer.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:ADB_Explorer.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <local:SimpleStackPanel Spacing="12">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ui:FontIcon
                x:Name="Icon"
                Margin="0,8,12,0"
                VerticalAlignment="Top"
                FontSize="28" />
            <TextBlock
                x:Name="DialogContent"
                Grid.Column="1"
                VerticalAlignment="Center"
                TextWrapping="Wrap" />
            <ContentPresenter
                x:Name="ContentPresenter"
                Grid.Column="1"
                Margin="0,8,0,0"
                VerticalAlignment="Center" />
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <CheckBox x:Name="DialogContentCheckbox" />
            <local:AdbMenu
                Grid.Column="1"
                Margin="0,10,-20,-18"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Style="{StaticResource DialogExtraButtonsStyle}" />
        </Grid>
    </local:SimpleStackPanel>
</UserControl>
